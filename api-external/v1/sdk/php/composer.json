{
    "name": "klubecash/php-sdk",
    "description": "Official PHP SDK for KlubeCash External API",
    "version": "1.0.0",
    "type": "library",
    "keywords": ["klubecash", "cashback", "api", "sdk", "php"],
    "homepage": "https://klubecash.com",
    "license": "MIT",
    "authors": [
        {
            "name": "KlubeCash Development Team",
            "email": "dev@klubecash.com",
            "homepage": "https://klubecash.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "suporte@klubecash.com",
        "docs": "https://klubecash.com/api-external/v1/docs",
        "source": "https://github.com/klubecash/php-sdk"
    },
    "require": {
        "php": ">=7.4.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "KlubeCash\\": "src/"
        },
        "files": [
            "KlubeCashSDK.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KlubeCash\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "test-coverage": "phpunit --coverage-html coverage/",
        "phpstan": "phpstan analyse --level=7 KlubeCashSDK.php",
        "cs-check": "phpcs --standard=PSR12 KlubeCashSDK.php",
        "cs-fix": "phpcbf --standard=PSR12 KlubeCashSDK.php"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}